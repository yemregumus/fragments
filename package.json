{
  "name": "fragments",
  "private": true,
  "version": "0.7.5",
  "description": "Fragments back-end API",
  "scripts": {
    "start:test": "env-cmd -f ./env.test node src/index.js",
    "test:watch": "jest -c jest.config.js --runInBand --watch --",
    "test": "jest -c jest.config.js --runInBand --",
    "test:integration": "hurl --test --glob \"tests/integration/**/*.hurl\"",
    "coverage": "jest -c jest.config.js --runInBand --coverage",
    "lint": "eslint --config .eslintrc.js src/** tests/unit/**",
    "start": "node src/index.js",
    "dev": "cross-env LOG_LEVEL=debug nodemon ./src/index.js --watch src",
    "debug": "cross-env LOG_LEVEL=debug nodemon --inspect=0.0.0.0:9229 ./src/index.js --watch src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yemregumus/fragments.git"
  },
  "author": "Yunus Emre Gumus",
  "license": "UNLICENSED",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@orangeopensource/hurl": "^4.2.0",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "env-cmd": "^10.1.0",
    "eslint": "^8.31.0",
    "jest": "^29.4.0",
    "nodemon": "^3.1.0",
    "prettier": "2.8.2",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "aws-jwt-verify": "^3.3.0",
    "compression": "^1.7.4",
    "content-type": "^1.0.5",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
