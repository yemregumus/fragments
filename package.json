    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "http-auth": "^4.2.0",
    "http-auth-passport": "^1.0.7",
    "markdown-it": "^13.0.1",
    "mime": "^3.0.0",
    "node-fetch": "^3.3.2",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "pino": "^8.8.0",
    "pino-http": "^8.3.1",
    "pino-pretty": "^9.1.1",
    "sharp": "^0.32.0",
    "stoppable": "^1.1.0"
  }
